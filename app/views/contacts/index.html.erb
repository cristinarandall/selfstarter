<script type="text/javascript">
function checkForm(form) {
  if (form.name.value == "") {
    alert('Please enter your name.');
    return false;
  }
  if (form.email.value == "") {
    alert('Please enter your email address.');
    return false;
  }
  if (form.message.value == "") {
    alert('Please enter your message.');
    return false;
  }
  return true;
}
</script>
